@{
    ViewData["Title"] = "Add Movie";
}

@model Mission06_lah263.Models.NewMovie

<!--Enter a New Movie Page-->
<h1>Enter a New Movie</h1>
<form method="post">
    <label asp-for="Category">Category</label>
    <select asp-for="Category">
        <option>Action/Adventure</option>
        <option>Comedy</option>
        <option>Drama</option>
        <option>Family</option>
        <option>Horror/Suspense</option>
        <option>Miscellaneous</option>
        <option>Television</option>
        <option>VHS</option>
    </select>
    <br />
    <label asp-for="Title">Title</label>
    <input asp-for="Title" />
    <br />
    <label asp-for="Year">Year</label>
    <input asp-for="Year" />
    <br />
    <label asp-for="Director">Director</label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option>G</option>
        <option>PG</option>
        <option>PG-13</option>
        <option>R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited</label>
    <input asp-for="Edited" />
    <br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="Notes" maxlength="25">Notes</label>
    <input asp-for="Notes" /><br />
    <button type="submit">Submit</button>
</form>